<main class="d-flex justify-content-center">
    <form class="bg-white p-5 rounded mt-5" action="/pal" method="POST">
        <h1 class="display-4 text-center mb-3">TechnologySimulator</h1>
        <h2 class="display-6 text-center mb-3">Admin Login</h2>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <label class="row form-label" for="username">Username</label>
        <input class="row form-control mb-3" type="text" name="username" id="username">
        <label class="row form-label" for="password">Password</label>
        <input class="row form-control mb-3" type="password" name="password" id="pasword">
        <p class="text-center"><input class="btn btn-success w-25" type="submit" value="Log in"></p>
        <% if flash[:error] != nil %>
        <p class="text-danger text-center"><%= flash[:error] %></p>
        <% end %>
    </form>
</main>
