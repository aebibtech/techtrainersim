<h2 class="mt-2 mb-3">New Category</h2>
<form class="w-25" action="/categories" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label class="form-label mb-3" for="category_name">Category name</label>
    <input class="form-control mb-3" type="text" name="category_name" id="category_name">
    <div class="mb-3">
        <input class="btn btn-success" type="submit" value="Create">
    </div>
    <% if flash[:success] != nil %>
    <p class="text-success"><%= flash[:success] %></p>
    <% end %>
    <% flash[:errors].each do |e| %>
    <p class="text-danger"><%= e %></p>
    <% end if flash[:errors] != nil %>
</form>