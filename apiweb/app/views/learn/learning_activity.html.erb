<main class="row p-3">
    <div class="row">
        <div class="col col-md-8">
            <h2><%= @la.activity_name %></h2>
            <figure class="mt-3">
                <img style="height: 420px;" class="w-100" src="/assets/placeholder.png" alt="">
            </figure>
        </div>
        <div class="col p-4 shadow">
            <h3 class="fs-2">About this activity</h3>
            <p class="lead fs-3"><%= @la.description %></p>
            <p class="fw-bold fs-4">Finish this activity to get <%= @la.reward %>&#11088;</p>
            <% if @user != nil %>
            <a class="btn btn-success">Start this activity</a>
            <% else %>
            <p><a role="button" href="#" data-bs-toggle="modal" data-bs-target="#login">Log in</a> to start this activity</p>
            <% end %>
        </div>
    </div>
</main>
<style>
    @media screen and (max-width: 879px) {
        .shadow{
            display: none!important;
        }
    }
</style>