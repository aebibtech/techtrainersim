<main class="row p-4">
    <% @categories.each do |category| %>
    <h2 class="my-4"><%= category.category_name %> (<%= category.activities.length %>)</h2>
    <section>
        <% category.activities.each do |act| %>
        <span style="width: 240px; height: 260px; margin-right: 12px;" class="card shadow">
            <a style="width: 240px; height: 260px; margin-right: 12px;" class="d-block" href="/learn/<%= act.id %>">
            <% if act.image %>
                <%= image_tag act.image, :class => "d-block w-100" %>
            <% else %>
                <img class="d-block" src="/assets/placeholder.png" alt="">
            <% end %>
                <div class="card-body">
                    <h3 class="text-center"><%= act.activity_name %></h3>
                </div>
            </a>
        </span>
        <% end %>
    </section>
    <% end %>
</main>